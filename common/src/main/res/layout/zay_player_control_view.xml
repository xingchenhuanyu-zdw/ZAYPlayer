<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="bottom"
    android:background="#9999"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/zay_iv_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/zay_small_pause_ic"
        android:visibility="gone"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/zay_iv_start"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/zay_small_start_ic"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/zay_tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/zay_white"
        tools:text="00:00:00" />

    <SeekBar
        android:id="@+id/zay_sb_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:max="100"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/zay_seekbar_style"
        tools:progress="25"
        tools:secondaryProgress="50" />

    <TextView
        android:id="@+id/zay_tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:textColor="@color/zay_white"
        tools:text="00:07:35" />

    <TextView
        android:id="@+id/zay_tv_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/zay_white"
        android:visibility="visible"
        tools:text="HD"
        tools:visibility="visible" />
</LinearLayout>
